{
    "compilerOptions": {
        "incremental": true,
        "module": "CommonJS",
        "rootDir": "./src",
        "jsx": "preserve",
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "**/__tests__/**"]
}
